<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_10sdp"
    android:orientation="horizontal"
    android:gravity="center">
    <ImageView
        android:id="@+id/imgv_left_in_layout_next_previous_time_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_left_arrow_24"
        />

    <TextView
        android:id="@+id/tv_date_in_layout_next_previous_time_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="28/03 - 03/04"
        android:textStyle="bold"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/imgv_right_in_layout_next_previous_time_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_right_arrow_24"
        />
</LinearLayout>