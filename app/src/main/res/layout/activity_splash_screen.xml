<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SplashScreen"
    android:background="#8E95DA">

<!--    <Button-->
<!--        android:id="@+id/biometric_login"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:background="@color/aqua"-->
<!--        android:text="login"/>-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_hozirontal_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_hozirontal_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_vertical_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_vertical_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8"/>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/gl_hozirontal_1"
        app:layout_constraintBottom_toBottomOf="@id/gl_hozirontal_2"
        app:layout_constraintLeft_toLeftOf="@id/gl_vertical_1"
        app:layout_constraintRight_toRightOf="@id/gl_vertical_2"
        android:src="@drawable/ic_phone_call"

        />

    <ImageView
        android:id="@+id/name_app"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintLeft_toLeftOf="@id/gl_vertical_1"
        app:layout_constraintRight_toRightOf="@id/gl_vertical_2"
        android:src="@drawable/icon_name_app"

        />



</androidx.constraintlayout.widget.ConstraintLayout>